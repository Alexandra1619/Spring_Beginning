<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
<context:property-placeholder location="classpath:musicPlayer.properties"></context:property-placeholder>
    <bean id="musicBean"
          class="ru.medvedeva.begin.ClassicMusic">

    </bean>
    <bean id="musicPlayer" class="ru.medvedeva.begin.MusicPlayer">
<property name="music" ref="musicBean"></property>
        <property name="v" value="${musicPlayer.v}"></property>
    </bean>

</beans>